<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Test Suite">
    <test name="Smoke Tests">
        <groups>
            <run>
                <include name="smokeTests"/>
                <include name="regressionTests"/>
                <include name="integrationTests"/>
            </run>
        </groups>
        <classes>
            <class name="testngexample.SmokeTest"/>
            <class name="testngexample.RegressionTest"/>
            <class name="testngexample.IntegrationTest"/>
        </classes>
    </test>
</suite>
